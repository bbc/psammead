{
  "name": "carl",
  "version": "0.1.0",
  "description": "Core Components Library Developed & Maintained By The Articles and Reach & Languages Team",
  "main": "index.js",
  "scripts": {
    "build": "lerna exec --parallel -- babel src -d dist --ignore spec.js,story.js",
    "publish": "lerna publish",
    "start": "node server.js",
    "storybook": "NODE_ENV=development start-storybook -p 8080 -c .storybook",
    "storybook:export": "build-storybook -c .storybook -o public",
    "speculate": "speculate",
    "test": "jest --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/carl.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bbc/carl/issues"
  },
  "homepage": "https://github.com/bbc/carl#readme",
  "dependencies": {
    "express": "^4.16.3",
    "speculate": "^1.7.4"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.11",
    "@storybook/addon-knobs": "^3.4.11",
    "@storybook/addon-options": "^3.4.11",
    "@storybook/addon-viewport": "^3.4.11",
    "@storybook/react": "4.0.0-alpha.8",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "glob-loader": "^0.3.0",
    "jest": "^23.6.0",
    "jest-fetch-mock": "^1.6.5",
    "jest-styled-components": "^5.0.1",
    "lerna": "^3.3.1",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-test-renderer": "^16.5.0",
    "storybook-readme": "^4.0.0-beta1"
  },
  "jest": {
    "resetModules": true,
    "testMatch": [
      "**/?(*.)(spec).js?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>node_modules/"
    ]
  }
}
